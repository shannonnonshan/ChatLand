generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id           Int           @id @default(autoincrement())
  name         String
  email        String        @unique
  createdAt    DateTime      @default(now())
  messages     Message[] // tin nhắn người này gửi
  participants Participant[] // tham gia các nhóm chat
}

model Conversation {
  id           Int           @id @default(autoincrement())
  name         String? // group name, null nếu là chat 1-1
  isGroup      Boolean       @default(false)
  createdAt    DateTime      @default(now())
  messages     Message[]
  participants Participant[]
}

model Participant {
  id             Int      @id @default(autoincrement())
  userId         Int
  conversationId Int
  joinedAt       DateTime @default(now())

  user         User         @relation(fields: [userId], references: [id])
  conversation Conversation @relation(fields: [conversationId], references: [id])

  @@unique([userId, conversationId]) // mỗi user chỉ tham gia 1 lần
}

model Message {
  id             Int      @id @default(autoincrement())
  content        String
  createdAt      DateTime @default(now())
  senderId       Int
  conversationId Int

  sender       User         @relation(fields: [senderId], references: [id])
  conversation Conversation @relation(fields: [conversationId], references: [id])
}
